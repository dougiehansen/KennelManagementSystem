    private string? errorMessage;
    private string? modalErrorMessage;

    private string filterName = "";
    private string filterBreed = "";
    private int filterCustomerId = 0;

    private bool showModal = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private DogForm dogForm = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            
            await LoadDogs();
            
            if (AuthService.IsInRole("Admin", "Staff"))
            {
                await LoadCustomers();
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load data. Please try again.";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadDogs()
    {
        dogs = await ApiService.GetAsync<List<Dog>>("api/dogs") ?? new();
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        var filtered = dogs.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(filterName))
        {
            filtered = filtered.Where(d => d.Name.Contains(filterName, StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrEmpty(filterBreed))
        {
            filtered = filtered.Where(d => d.Breed == filterBreed);
        }

        if (filterCustomerId > 0)
        {
            filtered = filtered.Where(d => d.CustomerId == filterCustomerId);
        }

        filteredDogs = filtered.ToList();
    }

    private void ClearFilters()
    {
        filterName = "";
        filterBreed = "";
        filterCustomerId = 0;
        ApplyFilters();
    }

    private async Task LoadCustomers()
    {
        customers = await ApiService.GetAsync<List<Customer>>("api/customers") ?? new();
    }

    private void OpenCreateModal()
    {
        isEditMode = false;
        dogForm = new DogForm();
        modalErrorMessage = null;
        showModal = true;
    }

    private void OpenEditModal(Dog dog)
    {
        isEditMode = true;
        dogForm = new DogForm
        {
            Id = dog.Id,
            Name = dog.Name,
            Breed = dog.Breed,
            Age = dog.Age,
            CustomerId = dog.CustomerId
        };
        modalErrorMessage = null;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        modalErrorMessage = null;
    }

    private async Task SaveDog()
    {
        try
        {
            isSaving = true;
            modalErrorMessage = null;

            var dog = new Dog
            {
                Id = dogForm.Id,
                Name = dogForm.Name,
                Breed = dogForm.Breed,
                Age = dogForm.Age,
                CustomerId = dogForm.CustomerId
            };

            HttpResponseMessage response;
            if (isEditMode)
            {
                response = await ApiService.PutAsync($"api/dogs/{dog.Id}", dog);
            }
            else
            {
                response = await ApiService.PostAsync("api/dogs", dog);
            }

            if (response.IsSuccessStatusCode)
            {
                await LoadDogs();
                CloseModal();
            }
            else
            {
                var errorBody = await response.Content.ReadAsStringAsync();
                modalErrorMessage = $"Failed to {(isEditMode ? "update" : "register")} dog.";
                Console.WriteLine($"Error: {errorBody}");
            }
        }
        catch (Exception ex)
        {
            modalErrorMessage = $"Error: {ex.Message}";
            Console.WriteLine($"Exception: {ex}");
        }
        finally
        {
            isSaving = false;
        }
    }

