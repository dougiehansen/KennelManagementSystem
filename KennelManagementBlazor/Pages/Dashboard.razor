    private async Task InitializeRevenueChart()
    {
        try
        {
            if (!recentBookings.Any())
            {
                return;
            }

            var confirmedOrPending = recentBookings
                .Where(b => b.Status == "Confirmed" || b.Status == "Pending")
                .ToList();

            var currentMonth = DateTime.Now;
            var daysInMonth = DateTime.DaysInMonth(currentMonth.Year, currentMonth.Month);
            
            var dailyRevenue = new Dictionary<int, decimal>();
            for (int day = 1; day <= daysInMonth; day++)
            {
                dailyRevenue[day] = 0;
            }
            
            foreach (var booking in confirmedOrPending)
            {
                if (booking.CheckInDate.Year == currentMonth.Year && 
                    booking.CheckInDate.Month == currentMonth.Month)
                {
                    dailyRevenue[booking.CheckInDate.Day] += booking.TotalCost;
                }
            }

            var chartDataList = dailyRevenue
                .OrderBy(x => x.Key)
                .Select(x => new { Day = x.Key, Label = x.Key.ToString(), Revenue = x.Value })
                .ToList();

            var labels = chartDataList.Select(x => x.Label).ToArray();
            var data = chartDataList.Select(x => (double)x.Revenue).ToArray();

            var chartData = new
            {
                labels = labels,
                datasets = new[]
                {
