    private int dogsCount = 0;
    private int availableKennelsCount = 0;
    private int activeBookingsCount = 0;
    private bool isLoadingStats = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadPublicStats();
    }

    private async Task LoadPublicStats()
    {
        try
        {
            isLoadingStats = true;

            // Try to load stats from API - these endpoints should be accessible without auth
            // If they require auth, we'll catch the exception and show default values
            var dogsTask = LoadDogsCount();
            var kennelsTask = LoadKennelsCount();
            var bookingsTask = LoadBookingsCount();

            await Task.WhenAll(dogsTask, kennelsTask, bookingsTask);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stats: {ex.Message}");
            // Keep default values of 0 if API fails
        }
        finally
        {
            isLoadingStats = false;
        }
    }

    private async Task LoadDogsCount()
    {
        try
        {
            var dogs = await ApiService.GetAsync<List<Dog>>("api/dogs");
            dogsCount = dogs?.Count ?? 0;
        }
        catch
        {
            dogsCount = 0;
        }
    }

    private async Task LoadKennelsCount()
    {
        try
        {
            var kennels = await ApiService.GetAsync<List<Kennel>>("api/kennels");
            if (kennels != null)
            {
                availableKennelsCount = kennels.Count(k => k.IsAvailable);
            }
        }
        catch
        {
            availableKennelsCount = 0;
        }
    }

    private async Task LoadBookingsCount()
    {
        try
        {
            var bookings = await ApiService.GetAsync<List<Booking>>("api/bookings");
            if (bookings != null)
            {
                // Count active bookings (Confirmed or Pending, with CheckOut date >= today)
                var today = DateTime.Today;
                activeBookingsCount = bookings.Count(b => 
                    (b.Status == "Confirmed" || b.Status == "Pending") && 
                    b.CheckOutDate >= today);
            }
        }
        catch
        {
            activeBookingsCount = 0;
        }
    }

    private string GetRoleClass()
    {
        if (AuthService.IsInRole("Admin")) return "admin";
        if (AuthService.IsInRole("Staff")) return "staff";
        return "customer";
    }
