    [Inject] private AuthService AuthService { get; set; } = default!;

    private List<Kennel> kennels = new();
    private List<Kennel> filteredKennels = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string? modalErrorMessage;

    private string filterSize = "";
    private string filterAvailability = "";
    private string filterName = "";

    private bool showModal = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private KennelForm kennelForm = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadKennels();
    }

    private async Task LoadKennels()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            kennels = await ApiService.GetAsync<List<Kennel>>("api/kennels") ?? new();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load kennels. Please try again.";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ApplyFilters()
    {
        var filtered = kennels.AsEnumerable();

        if (!string.IsNullOrEmpty(filterSize))
        {
            filtered = filtered.Where(k => k.Size == filterSize);
        }

        if (!string.IsNullOrEmpty(filterAvailability))
        {
            if (filterAvailability == "available")
            {
                filtered = filtered.Where(k => k.IsAvailable);
            }
            else if (filterAvailability == "occupied")
            {
                filtered = filtered.Where(k => !k.IsAvailable);
            }
        }

        if (!string.IsNullOrWhiteSpace(filterName))
        {
            filtered = filtered.Where(k => k.Name.Contains(filterName, StringComparison.OrdinalIgnoreCase));
        }

        filteredKennels = filtered.ToList();
    }

    private void ClearFilters()
    {
        filterSize = "";
        filterAvailability = "";
        filterName = "";
        ApplyFilters();
    }

    private void OpenCreateModal()
    {
        isEditMode = false;
        kennelForm = new KennelForm { IsAvailable = true };
        modalErrorMessage = null;
        showModal = true;
    }

    private void OpenEditModal(Kennel kennel)
    {
        isEditMode = true;
        kennelForm = new KennelForm
        {
            Id = kennel.Id,
            Name = kennel.Name,
            Size = kennel.Size,
            PricePerDay = kennel.PricePerDay,
            IsAvailable = kennel.IsAvailable
        };
        modalErrorMessage = null;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        modalErrorMessage = null;
    }

    private async Task SaveKennel()
    {
        try
        {
            isSaving = true;
            modalErrorMessage = null;

            var kennel = new Kennel
            {
                Id = kennelForm.Id,
                Name = kennelForm.Name,
                Size = kennelForm.Size,
                PricePerDay = kennelForm.PricePerDay,
                IsAvailable = kennelForm.IsAvailable
            };

            HttpResponseMessage response;
            if (isEditMode)
            {
                response = await ApiService.PutAsync($"api/kennels/{kennel.Id}", kennel);
            }
            else
            {
                response = await ApiService.PostAsync("api/kennels", kennel);
            }

            if (response.IsSuccessStatusCode)
            {
                await LoadKennels();
                CloseModal();
            }
            else
            {
                var errorBody = await response.Content.ReadAsStringAsync();
                modalErrorMessage = $"Failed to {(isEditMode ? "update" : "create")} kennel.";
                Console.WriteLine($"Error: {errorBody}");
            }
        }
        catch (Exception ex)
        {
            modalErrorMessage = $"Error: {ex.Message}";
            Console.WriteLine($"Exception: {ex}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteKennel(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this kennel?"))
        {
            try
            {
                var response = await ApiService.DeleteAsync($"api/kennels/{id}");
                if (response.IsSuccessStatusCode)
                {
                    await LoadKennels();
                }
                else
                {
                    errorMessage = "Failed to delete kennel.";
                }
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting kennel: {ex.Message}";
            }
        }
    }

