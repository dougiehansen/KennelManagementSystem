@page "/customers"
@using Microsoft.AspNetCore.Authorization
@using KennelManagementBlazor.Services
@using KennelManagementBlazor.Models
@using System.ComponentModel.DataAnnotations
@inject ApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@attribute [Authorize(Roles = "Admin,Staff")]

<PageTitle>Customers - Kennel Management</PageTitle>

<div class="customers-page">
    <header class="page-header">
        <div class="header-content">
            <div class="header-text">
                <h1>Customers</h1>
                <p>Manage customer information</p>
            </div>
            <button class="btn-add" @onclick="OpenCreateModal">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 5v14"></path>
                    <path d="M5 12h14"></path>
                </svg>
                <span>Add Customer</span>
            </button>
        </div>
    </header>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading customers...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="error-alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="m15 9-6 6"></path>
                <path d="m9 9 6 6"></path>
            </svg>
            <span>@errorMessage</span>
            <button class="alert-close" @onclick="() => errorMessage = null">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        </div>
    }
    else
    {
        <section class="stats-section">
            <div class="stat-card">
                <div class="stat-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <div class="stat-content">
                    <span class="stat-value">@customers.Count</span>
                    <span class="stat-label">Total Customers</span>
                </div>
            </div>
        </section>

        <section class="filters-section">
            <div class="filters-grid">
                <div class="filter-group">
                    <label>Search by Name</label>
                    <div class="input-with-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.3-4.3"></path>
                        </svg>
                        <input type="text" placeholder="Search customer name..." @bind="filterName" @bind:after="ApplyFilters" />
                    </div>
                </div>
                <div class="filter-group">
                    <label>Search by Email</label>
                    <div class="input-with-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                        </svg>
                        <input type="text" placeholder="Search email..." @bind="filterEmail" @bind:after="ApplyFilters" />
                    </div>
                </div>
            </div>
            <div class="filters-footer">
                <button class="btn-clear" @onclick="ClearFilters">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"></path>
                        <path d="M21 3v5h-5"></path>
                        <path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"></path>
                        <path d="M8 16H3v5"></path>
                    </svg>
                    <span>Clear Filters</span>
                </button>
                <span class="results-count">Showing @filteredCustomers.Count of @customers.Count customers</span>
            </div>
        </section>

        <section class="table-section">
            @if (filteredCustomers.Any())
            {
                <div class="table-container">
                    <div class="table-header">
                        <span class="col-id">ID</span>
                        <span class="col-name">Customer</span>
                        <span class="col-email">Email</span>
                        <span class="col-phone">Phone</span>
                        <span class="col-actions">Actions</span>
                    </div>
                    @foreach (var customer in filteredCustomers)
                    {
                        <div class="table-row">
                            <span class="col-id">
                                <span class="id-badge">#@customer.Id</span>
                            </span>
                            <span class="col-name">
                                <div class="customer-info">
                                    <div class="customer-avatar">@customer.Name.Substring(0, 1).ToUpper()</div>
                                    <span class="customer-name">@customer.Name</span>
                                </div>
                            </span>
                            <span class="col-email">
                                <a href="mailto:@customer.Email" class="email-link">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                                        <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                                    </svg>
                                    <span>@customer.Email</span>
                                </a>
                            </span>
                            <span class="col-phone">
                                <div class="phone-display">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                                    </svg>
                                    <span>@customer.Phone</span>
                                </div>
                            </span>
                            <span class="col-actions">
                                <button class="btn-action btn-edit" @onclick="() => OpenEditModal(customer)">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"></path>
                                        <path d="m15 5 4 4"></path>
                                    </svg>
                                    <span>Edit</span>
                                </button>
                                @if (AuthService.IsInRole("Admin"))
                                {
                                    <button class="btn-action btn-delete" @onclick="() => DeleteCustomer(customer.Id)">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M3 6h18"></path>
                                            <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path>
                                            <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path>
                                        </svg>
                                        <span>Delete</span>
                                    </button>
                                }
                            </span>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </div>
                    <h3>No customers found</h3>
                    <p>Add your first customer to get started</p>
                    <button class="btn-add" @onclick="OpenCreateModal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 5v14"></path>
                            <path d="M5 12h14"></path>
                        </svg>
                        <span>Add Customer</span>
                    </button>
                </div>
            }
        </section>
    }
</div>

@if (showModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h2>
                    @if (isEditMode)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"></path>
                            <path d="m15 5 4 4"></path>
                        </svg>
                        <span>Edit Customer</span>
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <line x1="19" x2="19" y1="8" y2="14"></line>
                            <line x1="22" x2="16" y1="11" y2="11"></line>
                        </svg>
                        <span>Add Customer</span>
                    }
                </h2>
                <button class="modal-close" @onclick="CloseModal">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <EditForm Model="@customerForm" OnValidSubmit="SaveCustomer">
                    <DataAnnotationsValidator />
                    
                    <div class="form-group">
                        <label>Full Name</label>
                        <InputText class="form-input" @bind-Value="customerForm.Name" placeholder="John Doe" />
                        <ValidationMessage For="@(() => customerForm.Name)" />
                    </div>

                    <div class="form-group">
                        <label>Email Address</label>
                        <InputText type="email" class="form-input" @bind-Value="customerForm.Email" placeholder="john@example.com" />
                        <ValidationMessage For="@(() => customerForm.Email)" />
                    </div>

                    <div class="form-group">
                        <label>Phone Number</label>
                        <InputText class="form-input" @bind-Value="customerForm.Phone" placeholder="(555) 123-4567" />
                        <ValidationMessage For="@(() => customerForm.Phone)" />
                    </div>

                    @if (modalErrorMessage != null)
                    {
                        <div class="form-error">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <path d="m15 9-6 6"></path>
                                <path d="m9 9 6 6"></path>
                            </svg>
                            <span>@modalErrorMessage</span>
                        </div>
                    }

                    <div class="modal-actions">
                        <button type="button" class="btn-secondary" @onclick="CloseModal">Cancel</button>
                        <button type="submit" class="btn-primary" disabled="@isSaving">
                            @if (isSaving) { <span class="btn-spinner"></span> }
                            <span>@(isEditMode ? "Update" : "Add") Customer</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700;800&family=Quicksand:wght@500;600;700&display=swap');

    .customers-page {
        --charcoal: #2D3436;
        --gray-dark: #4A5568;
        --gray: #636E72;
        --gray-light: #A0AEC0;
        --gray-lighter: #E2E8F0;
        --gray-lightest: #F7FAFC;
        --white: #FFFFFF;
        --danger: #E53E3E;
        --danger-light: #FED7D7;
        --shadow: 0 4px 12px rgba(45, 52, 54, 0.08);
        --shadow-md: 0 8px 24px rgba(45, 52, 54, 0.12);
        --radius: 12px;
        --radius-md: 16px;
        --radius-lg: 20px;
        max-width: 1200px;
        margin: 0 auto;
        font-family: 'Nunito', sans-serif;
    }

    .page-header { margin-bottom: 1.5rem; }
    .header-content { display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem; }
    .header-text h1 { font-family: 'Quicksand', sans-serif; font-size: 2rem; font-weight: 700; color: var(--charcoal); margin: 0 0 0.25rem 0; }
    .header-text p { font-size: 0.9375rem; color: var(--gray); margin: 0; }

    .btn-add { display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.75rem 1.25rem; background: var(--charcoal); color: var(--white); font-family: 'Nunito', sans-serif; font-weight: 700; font-size: 0.875rem; border: none; border-radius: var(--radius); cursor: pointer; transition: all 0.2s ease; }
    .btn-add:hover { background: var(--gray-dark); transform: translateY(-2px); box-shadow: var(--shadow-md); }

    .loading-state { display: flex; flex-direction: column; align-items: center; padding: 4rem 2rem; background: var(--white); border-radius: var(--radius-lg); box-shadow: var(--shadow); }
    .spinner { width: 40px; height: 40px; border: 3px solid var(--gray-lighter); border-top-color: var(--charcoal); border-radius: 50%; animation: spin 0.8s linear infinite; }
    @@keyframes spin { to { transform: rotate(360deg); } }
    .loading-state p { margin-top: 1rem; color: var(--gray); font-weight: 600; }

    .error-alert { display: flex; align-items: center; gap: 0.75rem; padding: 1rem 1.25rem; background: var(--danger-light); border-radius: var(--radius); margin-bottom: 1.5rem; color: #C53030; font-weight: 600; }
    .error-alert > span { flex: 1; }
    .alert-close { background: none; border: none; padding: 0.25rem; cursor: pointer; color: #C53030; opacity: 0.7; }
    .alert-close:hover { opacity: 1; }

    .stats-section { margin-bottom: 1.5rem; }
    .stat-card { display: inline-flex; align-items: center; gap: 1rem; padding: 1.25rem 1.5rem; background: var(--white); border-radius: var(--radius-md); box-shadow: var(--shadow); border: 1px solid var(--gray-lighter); }
    .stat-icon { width: 52px; height: 52px; background: var(--gray-lightest); border-radius: var(--radius); display: flex; align-items: center; justify-content: center; color: var(--charcoal); border: 1px solid var(--gray-lighter); }
    .stat-content { display: flex; flex-direction: column; }
    .stat-value { font-family: 'Quicksand', sans-serif; font-size: 1.75rem; font-weight: 700; color: var(--charcoal); line-height: 1.1; }
    .stat-label { font-size: 0.8125rem; color: var(--gray); font-weight: 600; }

    .filters-section { background: var(--white); border-radius: var(--radius-lg); padding: 1.5rem; box-shadow: var(--shadow); margin-bottom: 1.5rem; border: 1px solid var(--gray-lighter); }
    .filters-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
    .filter-group { display: flex; flex-direction: column; gap: 0.5rem; }
    .filter-group > label { font-size: 0.75rem; font-weight: 700; color: var(--gray); text-transform: uppercase; letter-spacing: 0.5px; }
    .input-with-icon { position: relative; display: flex; align-items: center; }
    .input-with-icon svg { position: absolute; left: 1rem; color: var(--gray-light); pointer-events: none; z-index: 1; }
    .input-with-icon input { padding-left: 2.75rem !important; }
    .filter-group input { width: 100%; padding: 0.75rem 1rem; font-family: 'Nunito', sans-serif; font-size: 0.875rem; font-weight: 600; color: var(--charcoal); background: var(--gray-lightest); border: 1px solid var(--gray-lighter); border-radius: var(--radius); transition: all 0.2s ease; }
    .filter-group input:focus { outline: none; border-color: var(--charcoal); background: var(--white); }
    .filter-group input::placeholder { color: var(--gray-light); }
    .filters-footer { display: flex; justify-content: space-between; align-items: center; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--gray-lighter); }
    .btn-clear { display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 0.875rem; background: var(--gray-lightest); color: var(--gray-dark); font-family: 'Nunito', sans-serif; font-weight: 600; font-size: 0.8125rem; border: 1px solid var(--gray-lighter); border-radius: var(--radius); cursor: pointer; }
    .btn-clear:hover { background: var(--white); border-color: var(--charcoal); }
    .results-count { font-size: 0.8125rem; color: var(--gray); font-weight: 600; }

    .table-section { background: var(--white); border-radius: var(--radius-lg); box-shadow: var(--shadow); overflow: hidden; border: 1px solid var(--gray-lighter); }
    .table-container { overflow-x: auto; }
    .table-header, .table-row { display: grid; grid-template-columns: 70px 1fr 1fr 160px 160px; gap: 1rem; padding: 1rem 1.5rem; align-items: center; }
    .table-header { background: var(--gray-lightest); border-bottom: 1px solid var(--gray-lighter); font-size: 0.6875rem; font-weight: 700; color: var(--gray); text-transform: uppercase; letter-spacing: 0.5px; }
    .table-row { border-bottom: 1px solid var(--gray-lighter); transition: background 0.15s ease; }
    .table-row:last-child { border-bottom: none; }
    .table-row:hover { background: var(--gray-lightest); }

    .id-badge { font-size: 0.75rem; font-weight: 700; color: var(--gray); background: var(--gray-lightest); padding: 0.25rem 0.5rem; border-radius: 6px; }
    .customer-info { display: flex; align-items: center; gap: 0.75rem; }
    .customer-avatar { width: 40px; height: 40px; background: var(--charcoal); color: var(--white); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 1rem; flex-shrink: 0; }
    .customer-name { font-weight: 700; color: var(--charcoal); }
    .email-link { display: inline-flex; align-items: center; gap: 0.5rem; color: var(--gray-dark); text-decoration: none; font-weight: 600; font-size: 0.875rem; }
    .email-link:hover { color: var(--charcoal); }
    .email-link svg { color: var(--gray-light); }
    .phone-display { display: inline-flex; align-items: center; gap: 0.5rem; color: var(--gray-dark); font-weight: 600; font-size: 0.875rem; }
    .phone-display svg { color: var(--gray-light); }

    .col-actions { display: flex; gap: 0.5rem; }
    .btn-action { display: inline-flex; align-items: center; gap: 0.375rem; padding: 0.5rem 0.75rem; font-family: 'Nunito', sans-serif; font-size: 0.75rem; font-weight: 700; background: var(--gray-lightest); border: 1px solid var(--gray-lighter); border-radius: 8px; cursor: pointer; transition: all 0.2s ease; color: var(--gray-dark); }
    .btn-edit:hover { background: var(--charcoal); border-color: var(--charcoal); color: var(--white); }
    .btn-delete:hover { background: var(--danger); border-color: var(--danger); color: var(--white); }

    .empty-state { display: flex; flex-direction: column; align-items: center; padding: 4rem 2rem; text-align: center; }
    .empty-icon { width: 100px; height: 100px; background: var(--gray-lightest); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-bottom: 1.5rem; border: 1px solid var(--gray-lighter); color: var(--gray-light); }
    .empty-state h3 { font-family: 'Quicksand', sans-serif; font-size: 1.25rem; font-weight: 700; color: var(--charcoal); margin: 0 0 0.5rem 0; }
    .empty-state p { font-size: 0.9375rem; color: var(--gray); margin: 0 0 1.5rem 0; }

    .modal-overlay { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.5); backdrop-filter: blur(4px); z-index: 1000; display: flex; align-items: center; justify-content: center; padding: 1rem; }
    .modal { position: relative; width: 100%; max-width: 440px; max-height: calc(100vh - 2rem); background: #FFFFFF; border-radius: var(--radius-lg); box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3); overflow: hidden; display: flex; flex-direction: column; }
    .modal-header { display: flex; justify-content: space-between; align-items: center; padding: 1.25rem 1.5rem; border-bottom: 1px solid var(--gray-lighter); background: #FFFFFF; flex-shrink: 0; }
    .modal-header h2 { display: flex; align-items: center; gap: 0.75rem; font-family: 'Quicksand', sans-serif; font-size: 1.125rem; font-weight: 700; color: var(--charcoal); margin: 0; white-space: nowrap; }
    .modal-header h2 svg { width: 20px; height: 20px; min-width: 20px; min-height: 20px; color: var(--gray); flex-shrink: 0; }
    .modal-close { width: 36px; height: 36px; display: flex; align-items: center; justify-content: center; background: var(--gray-lightest); border: none; border-radius: var(--radius); cursor: pointer; flex-shrink: 0; color: var(--gray); }
    .modal-close:hover { background: var(--gray-lighter); }
    .modal-body { padding: 1.5rem; overflow-y: auto; background: #FFFFFF; }

    .form-group { margin-bottom: 1.25rem; }
    .form-group label { display: block; font-size: 0.75rem; font-weight: 700; color: var(--gray); text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 0.5rem; }
    .form-input { width: 100%; padding: 0.75rem 1rem; font-family: 'Nunito', sans-serif; font-size: 0.9375rem; font-weight: 600; color: var(--charcoal); background: #FFFFFF; border: 2px solid var(--gray-lighter); border-radius: var(--radius); transition: all 0.2s ease; }
    .form-input:focus { outline: none; border-color: var(--charcoal); }
