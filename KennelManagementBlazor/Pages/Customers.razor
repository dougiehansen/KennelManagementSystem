    [Inject] private AuthService AuthService { get; set; } = default!;

    private List<Customer> customers = new();
    private List<Customer> filteredCustomers = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string? modalErrorMessage;
    private string filterName = "";
    private string filterEmail = "";
    private bool showModal = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private CustomerForm customerForm = new();

    protected override async Task OnInitializedAsync() => await LoadCustomers();

    private async Task LoadCustomers()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            customers = await ApiService.GetAsync<List<Customer>>("api/customers") ?? new();
            ApplyFilters();
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load customers. Please try again.";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally { isLoading = false; }
    }

    private void ApplyFilters()
    {
        var filtered = customers.AsEnumerable();
        if (!string.IsNullOrWhiteSpace(filterName))
            filtered = filtered.Where(c => c.Name.Contains(filterName, StringComparison.OrdinalIgnoreCase));
        if (!string.IsNullOrWhiteSpace(filterEmail))
            filtered = filtered.Where(c => c.Email.Contains(filterEmail, StringComparison.OrdinalIgnoreCase));
        filteredCustomers = filtered.ToList();
    }

    private void ClearFilters() { filterName = ""; filterEmail = ""; ApplyFilters(); }
    private void OpenCreateModal() { isEditMode = false; customerForm = new CustomerForm(); modalErrorMessage = null; showModal = true; }
    private void OpenEditModal(Customer customer) { isEditMode = true; customerForm = new CustomerForm { Id = customer.Id, Name = customer.Name, Email = customer.Email, Phone = customer.Phone }; modalErrorMessage = null; showModal = true; }
    private void CloseModal() { showModal = false; modalErrorMessage = null; }

    private async Task SaveCustomer()
    {
        try
        {
            isSaving = true;
            modalErrorMessage = null;
            var customer = new Customer { Id = customerForm.Id, Name = customerForm.Name, Email = customerForm.Email, Phone = customerForm.Phone };
            HttpResponseMessage response = isEditMode ? await ApiService.PutAsync($"api/customers/{customer.Id}", customer) : await ApiService.PostAsync("api/customers", customer);
            if (response.IsSuccessStatusCode) { await LoadCustomers(); CloseModal(); }
            else { modalErrorMessage = $"Failed to {(isEditMode ? "update" : "create")} customer."; }
        }
        catch (Exception ex) { modalErrorMessage = $"Error: {ex.Message}"; }
        finally { isSaving = false; }
    }

    private async Task DeleteCustomer(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this customer?"))
        {
            try
            {
                var response = await ApiService.DeleteAsync($"api/customers/{id}");
                if (response.IsSuccessStatusCode) { await LoadCustomers(); }
                else
                {
                    var errorBody = await response.Content.ReadAsStringAsync();
                    try { var errorObj = System.Text.Json.JsonSerializer.Deserialize<ErrorResponse>(errorBody); errorMessage = errorObj?.error ?? "Failed to delete customer."; }
                    catch { errorMessage = "Failed to delete customer."; }
                }
            }
            catch (Exception ex) { errorMessage = $"Error deleting customer: {ex.Message}"; }
        }
    }

