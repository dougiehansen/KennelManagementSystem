@page "/bookings"
@using Microsoft.AspNetCore.Authorization
@using KennelManagementBlazor.Services
@using KennelManagementBlazor.Models
@inject ApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@attribute [Authorize]

<PageTitle>Bookings - Kennel Management</PageTitle>

<div class="bookings-page">
    <!-- Header -->
    <header class="page-header">
        <div class="header-content">
            <div class="header-text">
                <h1>Bookings</h1>
                <p>Manage kennel bookings and reservations</p>
            </div>
            <button class="btn-add" @onclick="OpenCreateModal">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 5v14"></path>
                    <path d="M5 12h14"></path>
                </svg>
                <span>New Booking</span>
            </button>
        </div>
    </header>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading bookings...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="error-alert">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="m15 9-6 6"></path>
                <path d="m9 9 6 6"></path>
            </svg>
            <span>@errorMessage</span>
            <button class="alert-close" @onclick="() => errorMessage = null">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        </div>
    }
    else
    {
        <!-- Filters -->
        <section class="filters-section">
            <div class="filters-grid">
                <div class="filter-group">
                    <label>Status</label>
                    <select @bind="filterStatus" @bind:after="ApplyFilters">
                        <option value="">All Statuses</option>
                        <option value="Pending">Pending</option>
                        <option value="Confirmed">Confirmed</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label>Kennel</label>
                    <select @bind="filterKennelId" @bind:after="ApplyFilters">
                        <option value="0">All Kennels</option>
                        @foreach (var kennel in kennels)
                        {
                            <option value="@kennel.Id">@kennel.Name</option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label>From Date</label>
                    <input type="date" @bind="filterFromDate" @bind:after="ApplyFilters" />
                </div>
                <div class="filter-group">
                    <label>To Date</label>
                    <input type="date" @bind="filterToDate" @bind:after="ApplyFilters" />
                </div>
            </div>
            <div class="filters-footer">
                <button class="btn-clear" @onclick="ClearFilters">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"></path>
                        <path d="M21 3v5h-5"></path>
                        <path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"></path>
                        <path d="M8 16H3v5"></path>
                    </svg>
                    <span>Clear Filters</span>
                </button>
                <span class="results-count">Showing @filteredBookings.Count of @bookings.Count bookings</span>
            </div>
        </section>

        <!-- Bookings Table -->
        <section class="table-section">
            @if (filteredBookings.Any())
            {
                <div class="table-container">
                    <div class="table-header">
                        <span class="col-id">ID</span>
                        <span class="col-dog">Dog</span>
                        <span class="col-kennel">Kennel</span>
                        <span class="col-dates">Dates</span>
                        <span class="col-duration">Duration</span>
                        <span class="col-cost">Total</span>
                        <span class="col-status">Status</span>
                        <span class="col-actions">Actions</span>
                    </div>
                    @foreach (var booking in filteredBookings)
                    {
                        <div class="table-row">
                            <span class="col-id">
                                <span class="id-badge">#@booking.Id</span>
                            </span>
                            <span class="col-dog">
                                <div class="entity-badge dog">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="11" cy="4" r="2"></circle>
                                        <circle cx="18" cy="8" r="2"></circle>
                                        <circle cx="20" cy="16" r="2"></circle>
                                        <path d="M9 10a5 5 0 0 1 5 5v3.5a3.5 3.5 0 0 1-6.84 1.045Q6.52 17.48 4.46 16.84A3.5 3.5 0 0 1 5.5 10Z"></path>
                                    </svg>
                                    <span>@GetDogName(booking.DogId)</span>
                                </div>
                            </span>
                            <span class="col-kennel">
                                <div class="entity-badge kennel">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M2 22V12a2 2 0 0 1 .71-1.53l8-6.7a2 2 0 0 1 2.58 0l8 6.7A2 2 0 0 1 22 12v10"></path>
                                        <path d="M10 22V16a2 2 0 0 1 2-2h0a2 2 0 0 1 2 2v6"></path>
                                        <path d="M2 22h20"></path>
                                    </svg>
                                    <span>@GetKennelName(booking.KennelId)</span>
                                </div>
                            </span>
                            <span class="col-dates">
                                <div class="dates-display">
                                    <span class="date-item">
                                        <span class="date-label">In</span>
                                        <span class="date-value">@booking.CheckInDate.ToString("MMM d")</span>
                                    </span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="date-arrow">
                                        <path d="M5 12h14"></path>
                                        <path d="m12 5 7 7-7 7"></path>
                                    </svg>
                                    <span class="date-item">
                                        <span class="date-label">Out</span>
                                        <span class="date-value">@booking.CheckOutDate.ToString("MMM d")</span>
                                    </span>
                                </div>
                            </span>
                            <span class="col-duration">
                                <span class="duration-badge">@((booking.CheckOutDate - booking.CheckInDate).Days) days</span>
                            </span>
                            <span class="col-cost">
                                <span class="cost-value">$@booking.TotalCost.ToString("N2")</span>
                            </span>
                            <span class="col-status">
                                <span class="status-badge status-@booking.Status.ToLower()">@booking.Status</span>
                            </span>
                            <span class="col-actions">
                                <button class="btn-action btn-edit" title="Edit" @onclick="() => OpenEditModal(booking)">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"></path>
                                        <path d="m15 5 4 4"></path>
                                    </svg>
                                    <span>Edit</span>
                                </button>
                                @if (AuthService.IsInRole("Admin"))
                                {
                                    <button class="btn-action btn-delete" title="Delete" @onclick="() => DeleteBooking(booking.Id)">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M3 6h18"></path>
                                            <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path>
                                            <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path>
                                            <line x1="10" x2="10" y1="11" y2="17"></line>
                                            <line x1="14" x2="14" y1="11" y2="17"></line>
                                        </svg>
                                        <span>Delete</span>
                                    </button>
                                }
                            </span>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M8 2v4"></path>
                            <path d="M16 2v4"></path>
                            <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                            <path d="M3 10h18"></path>
                        </svg>
                    </div>
                    <h3>No bookings found</h3>
                    <p>Create your first booking to get started</p>
                    <button class="btn-add" @onclick="OpenCreateModal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 5v14"></path>
                            <path d="M5 12h14"></path>
                        </svg>
                        <span>New Booking</span>
                    </button>
                </div>
            }
        </section>
    }
</div>

<!-- Modal -->
@if (showModal)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h2>
                    @if (isEditMode)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"></path>
                            <path d="m15 5 4 4"></path>
                        </svg>
                        <span>Edit Booking</span>
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M12 5v14"></path>
                            <path d="M5 12h14"></path>
                        </svg>
                        <span>New Booking</span>
                    }
                </h2>
                <button class="modal-close" @onclick="CloseModal">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <EditForm Model="@bookingForm" OnValidSubmit="SaveBooking">
                    <DataAnnotationsValidator />
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label>Dog</label>
                            <select class="form-input" @bind="bookingForm.DogId">
                                <option value="0">Select a dog...</option>
                                @foreach (var dog in dogs)
                                {
                                    <option value="@dog.Id">@dog.Name (@dog.Breed)</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Kennel</label>
                            <select class="form-input" @bind="bookingForm.KennelId" @bind:after="CalculatePrice">
                                <option value="0">Select a kennel...</option>
                                @foreach (var kennel in kennels.Where(k => k.IsAvailable || isEditMode))
                                {
                                    <option value="@kennel.Id">@kennel.Name ($@kennel.PricePerDay/day)</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Check-In Date</label>
                            <InputDate class="form-input" @bind-Value="bookingForm.CheckInDate" @bind-Value:after="CalculatePrice" />
                        </div>

                        <div class="form-group">
                            <label>Check-Out Date</label>
                            <InputDate class="form-input" @bind-Value="bookingForm.CheckOutDate" @bind-Value:after="CalculatePrice" />
                        </div>
                    </div>

                    <div class="price-card">
                        <div class="price-header">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <path d="M16 8h-6a2 2 0 1 0 0 4h4a2 2 0 1 1 0 4H8"></path>
                                <path d="M12 18V6"></path>
                            </svg>
                            <span>Total Cost</span>
                        </div>
                        <div class="price-amount">$@bookingForm.TotalCost.ToString("N2")</div>
                        @if (calculatedDays > 0)
                        {
                           <div class="price-details">@calculatedDays days Ã— $@((bookingForm.TotalCost / calculatedDays).ToString("N2"))/day</div>
                        }
                    </div>

                    @if (AuthService.IsInRole("Admin", "Staff"))
                    {
                        <div class="form-row">
                            <div class="form-group">
                                <label>Price Override ($)</label>
                                <InputNumber class="form-input" @bind-Value="bookingForm.TotalCost" />
                            </div>

                            <div class="form-group">
                                <label>Status</label>
                                <select class="form-input" @bind="bookingForm.Status">
                                    <option value="Pending">Pending</option>
                                    <option value="Confirmed">Confirmed</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                            </div>
                        </div>
                    }

                    @if (modalErrorMessage != null)
                    {
                        <div class="form-error">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <path d="m15 9-6 6"></path>
                                <path d="m9 9 6 6"></path>
                            </svg>
                            <span>@modalErrorMessage</span>
                        </div>
                    }

                    <div class="modal-actions">
                        <button type="button" class="btn-secondary" @onclick="CloseModal">Cancel</button>
                        <button type="submit" class="btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="btn-spinner"></span>
                            }
                            <span>@(isEditMode ? "Update" : "Create") Booking</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700;800&family=Quicksand:wght@500;600;700&display=swap');

    .bookings-page {
        --charcoal: #2D3436;
        --gray-dark: #4A5568;
        --gray: #636E72;
        --gray-light: #A0AEC0;
        --gray-lighter: #E2E8F0;
        --gray-lightest: #F7FAFC;
        --white: #FFFFFF;
        --success: #48BB78;
        --success-light: #C6F6D5;
        --danger: #E53E3E;
        --danger-light: #FED7D7;
        --warning: #ECC94B;
        --warning-light: #FEFCBF;
        --info: #4299E1;
        --info-light: #BEE3F8;
        --shadow: 0 4px 12px rgba(45, 52, 54, 0.08);
        --shadow-md: 0 8px 24px rgba(45, 52, 54, 0.12);
        --radius: 12px;
        --radius-md: 16px;
        --radius-lg: 20px;

        max-width: 1400px;
        margin: 0 auto;
        font-family: 'Nunito', sans-serif;
    }

    /* Header */
    .page-header {
        margin-bottom: 1.5rem;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .header-text h1 {
        font-family: 'Quicksand', sans-serif;
        font-size: 2rem;
        font-weight: 700;
        color: var(--charcoal);
        margin: 0 0 0.25rem 0;
    }

    .header-text p {
        font-size: 0.9375rem;
        color: var(--gray);
        margin: 0;
    }

    .btn-add {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.25rem;
        background: var(--charcoal);
        color: var(--white);
        font-family: 'Nunito', sans-serif;
        font-weight: 700;
        font-size: 0.875rem;
        border: none;
        border-radius: var(--radius);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-add:hover {
        background: var(--gray-dark);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    /* Loading & Error */
    .loading-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 4rem 2rem;
        background: var(--white);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow);
    }

    .spinner {
        width: 40px;
        height: 40px;
        border: 3px solid var(--gray-lighter);
        border-top-color: var(--charcoal);
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    .loading-state p {
        margin-top: 1rem;
        color: var(--gray);
        font-weight: 600;
    }

    .error-alert {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.25rem;
        background: var(--danger-light);
        border-radius: var(--radius);
        margin-bottom: 1.5rem;
        color: #C53030;
        font-weight: 600;
    }

    .error-alert > span {
        flex: 1;
    }

    .alert-close {
        background: none;
        border: none;
        padding: 0.25rem;
        cursor: pointer;
        color: #C53030;
        opacity: 0.7;
        transition: opacity 0.2s;
    }

    .alert-close:hover {
        opacity: 1;
    }

    /* Filters */
    .filters-section {
        background: var(--white);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        box-shadow: var(--shadow);
        margin-bottom: 1.5rem;
        border: 1px solid var(--gray-lighter);
    }

    .filters-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .filter-group label {
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--gray);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .filter-group input,
    .filter-group select {
        width: 100%;
        padding: 0.75rem 1rem;
        font-family: 'Nunito', sans-serif;
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--charcoal);
        background: var(--gray-lightest);
        border: 1px solid var(--gray-lighter);
        border-radius: var(--radius);
        transition: all 0.2s ease;
    }

    .filter-group input:focus,
    .filter-group select:focus {
        outline: none;
        border-color: var(--charcoal);
        background: var(--white);
    }

    .filters-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--gray-lighter);
    }

    .btn-clear {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.875rem;
        background: var(--gray-lightest);
        color: var(--gray-dark);
        font-family: 'Nunito', sans-serif;
        font-weight: 600;
        font-size: 0.8125rem;
        border: 1px solid var(--gray-lighter);
        border-radius: var(--radius);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-clear:hover {
        background: var(--white);
        border-color: var(--charcoal);
    }

    .results-count {
        font-size: 0.8125rem;
        color: var(--gray);
        font-weight: 600;
    }

    /* Table */
    .table-section {
        background: var(--white);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow);
        overflow: hidden;
        border: 1px solid var(--gray-lighter);
    }

    .table-container {
        overflow-x: auto;
    }

    .table-header,
    .table-row {
        display: grid;
        grid-template-columns: 60px 140px 140px 180px 90px 100px 110px 160px;
        gap: 0.75rem;
        padding: 1rem 1.5rem;
        align-items: center;
    }

    .table-header {
        background: var(--gray-lightest);
        border-bottom: 1px solid var(--gray-lighter);
        font-size: 0.6875rem;
        font-weight: 700;
        color: var(--gray);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .table-row {
        border-bottom: 1px solid var(--gray-lighter);
        transition: background 0.15s ease;
    }

    .table-row:last-child {
        border-bottom: none;
    }

    .table-row:hover {
        background: var(--gray-lightest);
    }

    .id-badge {
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--gray);
        background: var(--gray-lightest);
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
    }

    .entity-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.375rem 0.625rem;
        border-radius: 8px;
        font-size: 0.75rem;
        font-weight: 700;
    }

    .entity-badge.dog {
        background: var(--gray-lightest);
        color: var(--charcoal);
        border: 1px solid var(--gray-lighter);
    }

    .entity-badge.kennel {
        background: var(--info-light);
        color: #2B6CB0;
    }

    .dates-display {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .date-item {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .date-label {
        font-size: 0.625rem;
        font-weight: 700;
        color: var(--gray-light);
        text-transform: uppercase;
    }

    .date-value {
        font-size: 0.8125rem;
        font-weight: 700;
        color: var(--charcoal);
    }

    .date-arrow {
        color: var(--gray-light);
    }

    .duration-badge {
        font-size: 0.75rem;
