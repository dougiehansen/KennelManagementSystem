    [Inject] private AuthService AuthService { get; set; } = default!;

    private List<Booking> bookings = new();
    private List<Booking> filteredBookings = new();
    private List<Dog> dogs = new();
    private List<Kennel> kennels = new();
    private bool isLoading = true;
    private string? errorMessage;
    private string? modalErrorMessage;

    private string filterStatus = "";
    private int filterKennelId = 0;
    private DateTime? filterFromDate = null;
    private DateTime? filterToDate = null;

    private bool showModal = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private BookingForm bookingForm = new();
    private int calculatedDays = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private string GetDogName(int dogId)
    {
        var dog = dogs.FirstOrDefault(d => d.Id == dogId);
        return dog?.Name ?? $"Dog #{dogId}";
    }

    private string GetKennelName(int kennelId)
    {
        var kennel = kennels.FirstOrDefault(k => k.Id == kennelId);
        return kennel?.Name ?? $"Kennel #{kennelId}";
    }

    private void CalculatePrice()
    {
        if (bookingForm.KennelId > 0 && bookingForm.CheckOutDate > bookingForm.CheckInDate)
        {
            var kennel = kennels.FirstOrDefault(k => k.Id == bookingForm.KennelId);
            if (kennel != null)
            {
                calculatedDays = (bookingForm.CheckOutDate - bookingForm.CheckInDate).Days;
                bookingForm.TotalCost = kennel.PricePerDay * calculatedDays;
            }
        }
        else
        {
            calculatedDays = 0;
            bookingForm.TotalCost = 0;
        }
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            
            await Task.WhenAll(LoadBookings(), LoadDogs(), LoadKennels());
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load data. Please try again.";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadBookings()
    {
        bookings = await ApiService.GetAsync<List<Booking>>("api/bookings") ?? new();
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        var filtered = bookings.AsEnumerable();

        if (!string.IsNullOrEmpty(filterStatus))
            filtered = filtered.Where(b => b.Status == filterStatus);

        if (filterKennelId > 0)
            filtered = filtered.Where(b => b.KennelId == filterKennelId);

        if (filterFromDate.HasValue)
            filtered = filtered.Where(b => b.CheckInDate >= filterFromDate.Value);

        if (filterToDate.HasValue)
            filtered = filtered.Where(b => b.CheckInDate <= filterToDate.Value);

        filteredBookings = filtered.ToList();
    }

    private void ClearFilters()
    {
        filterStatus = "";
        filterKennelId = 0;
        filterFromDate = null;
        filterToDate = null;
        ApplyFilters();
    }

    private async Task LoadDogs()
    {
        dogs = await ApiService.GetAsync<List<Dog>>("api/dogs") ?? new();
    }

    private async Task LoadKennels()
    {
        kennels = await ApiService.GetAsync<List<Kennel>>("api/kennels") ?? new();
    }

    private void OpenCreateModal()
    {
        isEditMode = false;
        bookingForm = new BookingForm
        {
            CheckInDate = DateTime.Today,
            CheckOutDate = DateTime.Today.AddDays(1),
            Status = "Pending"
        };
        calculatedDays = 0;
        modalErrorMessage = null;
        showModal = true;
    }

    private void OpenEditModal(Booking booking)
    {
        isEditMode = true;
        bookingForm = new BookingForm
        {
            Id = booking.Id,
            DogId = booking.DogId,
            KennelId = booking.KennelId,
            CheckInDate = booking.CheckInDate,
            CheckOutDate = booking.CheckOutDate,
            TotalCost = booking.TotalCost,
            Status = booking.Status
        };
        calculatedDays = (booking.CheckOutDate - booking.CheckInDate).Days;
        modalErrorMessage = null;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
        modalErrorMessage = null;
    }

    private async Task SaveBooking()
    {
        try
        {
            isSaving = true;
            modalErrorMessage = null;

            var booking = new Booking
            {
                Id = bookingForm.Id,
                DogId = bookingForm.DogId,
                KennelId = bookingForm.KennelId,
                CheckInDate = bookingForm.CheckInDate,
                CheckOutDate = bookingForm.CheckOutDate,
                TotalCost = bookingForm.TotalCost,
                Status = bookingForm.Status
            };

            HttpResponseMessage response;
            if (isEditMode)
                response = await ApiService.PutAsync($"api/bookings/{booking.Id}", booking);
            else
                response = await ApiService.PostAsync("api/bookings", booking);

            if (response.IsSuccessStatusCode)
            {
                await LoadBookings();
                CloseModal();
            }
            else
            {
                modalErrorMessage = $"Failed to {(isEditMode ? "update" : "create")} booking.";
            }
        }
        catch (Exception ex)
        {
            modalErrorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteBooking(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this booking?"))
        {
            try
            {
                var response = await ApiService.DeleteAsync($"api/bookings/{id}");
                if (response.IsSuccessStatusCode)
                    await LoadBookings();
                else
                    errorMessage = "Failed to delete booking.";
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting booking: {ex.Message}";
            }
        }
    }

