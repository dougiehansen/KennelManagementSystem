@page "/login"
@using KennelManagementBlazor.Services
@using System.ComponentModel.DataAnnotations
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Login - Kennel Management</PageTitle>

<div class="login-page">
    <div class="login-container">
        <!-- Brand Panel -->
        <div class="brand-panel">
            <div class="brand-content">
             
                <div class="dog-illustration">
           
<img src="/dog.png" alt="dog">



                </div>

                <h1>Kennel Management</h1>
                <p>Professional pet care management system</p>
                
                <div class="brand-features">
                    <div class="feature">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 6 9 17l-5-5"></path>
                        </svg>
                        <span>Manage bookings efficiently</span>
                    </div>
                    <div class="feature">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 6 9 17l-5-5"></path>
                        </svg>
                        <span>Track kennel availability</span>
                    </div>
                    <div class="feature">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 6 9 17l-5-5"></path>
                        </svg>
                        <span>Customer management</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Login Form Panel -->
        <div class="form-panel">
            <div class="form-content">
                <div class="form-header">
                    <h2>Welcome back</h2>
                    <p>Sign in to your account</p>
                </div>

                <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
                    <DataAnnotationsValidator />
                    
                    <div class="form-group">
                        <label>Email Address</label>
                        <div class="input-wrapper">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                            </svg>
                            <InputText class="form-input" @bind-Value="loginModel.Email" disabled="@isLoading" placeholder="your@email.com" />
                        </div>
                        <ValidationMessage For="@(() => loginModel.Email)" />
                    </div>
                    
                    <div class="form-group">
                        <label>Password</label>
                        <div class="input-wrapper">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                            </svg>
                            <InputText type="password" class="form-input" @bind-Value="loginModel.Password" disabled="@isLoading" placeholder="Enter your password" />
                        </div>
                        <ValidationMessage For="@(() => loginModel.Password)" />
                    </div>
                    
                    <button type="submit" class="btn-login" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner"></span>
                            <span>Signing in...</span>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                                <polyline points="10 17 15 12 10 7"></polyline>
                                <line x1="15" x2="3" y1="12" y2="12"></line>
                            </svg>
                            <span>Sign In</span>
                        }
                    </button>
                </EditForm>
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-error">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="m15 9-6 6"></path>
                            <path d="m9 9 6 6"></path>
                        </svg>
                        <span>@errorMessage</span>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 6 9 17l-5-5"></path>
                        </svg>
                        <span>@successMessage</span>
                    </div>
                }

                <!-- Test Accounts -->
                <div class="test-accounts">
                    <div class="test-header">
                        <div class="test-line"></div>
                        <span>Test Accounts</span>
                        <div class="test-line"></div>
                    </div>
                    
                    <div class="accounts-grid">
                        <div class="account-card" @onclick="() => FillCredentials(adminEmail, adminPassword)">
                            <div class="account-role role-admin">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M12 2 2 7l10 5 10-5-10-5Z"></path>
                                    <path d="m2 17 10 5 10-5"></path>
                                    <path d="m2 12 10 5 10-5"></path>
                                </svg>
                                <span>Admin</span>
                            </div>
                            <div class="account-email">admin@@kennel.com</div>
                        </div>

                        <div class="account-card" @onclick="() => FillCredentials(staffEmail, staffPassword)">
                            <div class="account-role role-staff">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                                <span>Staff</span>
                            </div>
                            <div class="account-email">staff@@kennel.com</div>
                        </div>

                        <div class="account-card" @onclick="() => FillCredentials(customerEmail, customerPassword)">
                            <div class="account-role role-customer">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                <span>Customer</span>
                            </div>
                            <div class="account-email">customer@@kennel.com</div>
                        </div>
                    </div>
                    
                    <p class="test-hint">Click a card to auto-fill credentials</p>
                </div>

                <div class="register-link">
                    Don't have an account? <a href="/register">Create one</a>
                </div>
            </div>
        </div>
    </div>

    @if (showCopyNotification)
    {
        <div class="toast-notification">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 6 9 17l-5-5"></path>
            </svg>
            <span>Credentials filled!</span>
        </div>
    }
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700;800&family=Quicksand:wght@500;600;700&display=swap');

    .login-page {
        --charcoal: #2D3436;
        --gray-dark: #4A5568;
        --gray: #636E72;
        --gray-light: #A0AEC0;
        --gray-lighter: #E2E8F0;
        --gray-lightest: #F7FAFC;
        --white: #FFFFFF;
        --danger: #E53E3E;
        --danger-light: #FED7D7;
        --success: #48BB78;
        --success-light: #C6F6D5;
        --info: #4299E1;
        --info-light: #BEE3F8;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--gray-lightest);
        font-family: 'Nunito', sans-serif;
        padding: 1rem;
    }

    .login-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        max-width: 1000px;
        width: 100%;
        background: var(--white);
        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(45, 52, 54, 0.15);
        overflow: hidden;
    }

    /* Brand Panel */
    .brand-panel {
        background: linear-gradient(135deg, #E8F4FD 0%, #F0F7FF 100%);
        padding: 2.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-right: 1px solid var(--gray-lighter);
    }

    .brand-content {
        text-align: center;
        color: var(--charcoal);
    }

   .dog-illustration {
    width: 500px;
    height: 500x;
    margin: 0 auto 1.5rem;
}

.dog-illustration img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

    .brand-content h1 {
        font-family: 'Quicksand', sans-serif;
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
        color: var(--charcoal);
    }

    .brand-content > p {
        color: var(--gray);
        font-size: 0.9375rem;
        margin: 0 0 2rem 0;
    }

    .brand-features {
        text-align: left;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        background: var(--white);
        padding: 1.25rem;
        border-radius: 16px;
        box-shadow: 0 4px 12px rgba(45, 52, 54, 0.08);
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--gray-dark);
        font-size: 0.875rem;
        font-weight: 600;
    }

    .feature svg {
        color: var(--success);
        flex-shrink: 0;
    }

    /* Form Panel */
    .form-panel {
        padding: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--white);
    }

    .form-content {
        width: 100%;
        max-width: 360px;
    }

    .form-header {
        margin-bottom: 2rem;
    }

    .form-header h2 {
        font-family: 'Quicksand', sans-serif;
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--charcoal);
        margin: 0 0 0.375rem 0;
    }

    .form-header p {
        color: var(--gray);
        font-size: 0.9375rem;
        margin: 0;
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-group label {
        display: block;
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--gray);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-wrapper svg {
        position: absolute;
        left: 1rem;
        color: var(--gray-light);
        pointer-events: none;
        z-index: 1;
    }

    .form-input {
        width: 100%;
        padding: 0.875rem 1rem 0.875rem 2.875rem;
        font-family: 'Nunito', sans-serif;
        font-size: 0.9375rem;
        font-weight: 600;
        color: var(--charcoal);
        background: var(--white);
        border: 2px solid var(--gray-lighter);
        border-radius: 12px;
        transition: all 0.2s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--charcoal);
    }

    .form-input:disabled {
        background: var(--gray-lightest);
        cursor: not-allowed;
    }

    .form-input::placeholder {
        color: var(--gray-light);
    }

    .validation-message {
        font-size: 0.8125rem;
        color: var(--danger);
        margin-top: 0.375rem;
        font-weight: 600;
    }

    .btn-login {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.875rem 1.5rem;
        background: var(--charcoal);
        color: var(--white);
        font-family: 'Nunito', sans-serif;
        font-weight: 700;
        font-size: 0.9375rem;
        border: none;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
        margin-top: 0.5rem;
    }

    .btn-login:hover:not(:disabled) {
        background: var(--gray-dark);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(45, 52, 54, 0.2);
    }

    .btn-login:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .spinner {
        width: 18px;
        height: 18px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: var(--white);
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    .alert {
        display: flex;
        align-items: center;
        gap: 0.625rem;
        padding: 0.875rem 1rem;
        border-radius: 12px;
        margin-top: 1rem;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .alert-error {
        background: var(--danger-light);
        color: #C53030;
    }

    .alert-success {
        background: var(--success-light);
        color: #276749;
    }

    /* Test Accounts */
    .test-accounts {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--gray-lighter);
    }

    .test-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .test-line {
        flex: 1;
        height: 1px;
        background: var(--gray-lighter);
    }

    .test-header span {
        font-size: 0.6875rem;
        font-weight: 700;
        color: var(--gray-light);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .accounts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.75rem;
    }

    .account-card {
        background: var(--gray-lightest);
        border: 1px solid var(--gray-lighter);
        border-radius: 12px;
        padding: 0.875rem;
        text-align: center;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .account-card:hover {
        border-color: var(--charcoal);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(45, 52, 54, 0.1);
    }

    .account-role {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
        font-size: 0.6875rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        margin-bottom: 0.5rem;
    }

    .role-admin { background: var(--danger-light); color: #C53030; }
    .role-staff { background: var(--info-light); color: #2B6CB0; }
    .role-customer { background: var(--success-light); color: #276749; }

    .account-email {
        font-size: 0.6875rem;
        color: var(--gray);
        font-weight: 600;
        word-break: break-all;
    }

    .test-hint {
        text-align: center;
        font-size: 0.75rem;
        color: var(--gray-light);
        margin: 0.75rem 0 0 0;
    }

    .register-link {
        text-align: center;
        margin-top: 1.5rem;
        font-size: 0.875rem;
        color: var(--gray);
    }

    .register-link a {
        color: var(--charcoal);
        font-weight: 700;
        text-decoration: none;
    }

    .register-link a:hover {
        text-decoration: underline;
    }

    /* Toast */
    .toast-notification {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 1.25rem;
        background: var(--charcoal);
        color: var(--white);
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(45, 52, 54, 0.3);
        font-weight: 700;
        font-size: 0.875rem;
        animation: slideIn 0.3s ease-out;
        z-index: 1000;
    }

    @@keyframes slideIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Responsive */
    @@media (max-width: 900px) {
        .login-container {
            grid-template-columns: 1fr;
            max-width: 480px;
        }

        .brand-panel {
            display: none;
        }

        .form-panel {
            padding: 2.5rem 2rem;
        }
    }

    @@media (max-width: 480px) {
        .form-panel {
            padding: 2rem 1.5rem;
        }

        .accounts-grid {
            grid-template-columns: 1fr;
        }

        .account-card {
            display: flex;
            align-items: center;
            gap: 1rem;
            text-align: left;
        }

        .account-role {
            margin-bottom: 0;
        }
    }
</style>

@code {
    private LoginModel loginModel = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isLoading = false;
    private bool showCopyNotification = false;

    private string adminEmail = "admin@kennel.com";
    private string adminPassword = "Admin123!";
    private string staffEmail = "staff@kennel.com";
    private string staffPassword = "Staff123!";
    private string customerEmail = "customer@kennel.com";
    private string customerPassword = "Customer123!";

    private async Task HandleLogin()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;
        isLoading = true;

        try
        {
            var success = await AuthService.Login(loginModel.Email, loginModel.Password);
            if (success)
            {
                successMessage = "Login successful! Redirecting...";
                await Task.Delay(1000);
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = "Invalid email or password. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred during login. Please try again.";
            Console.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task FillCredentials(string email, string password)
    {
        loginModel.Email = email;
        loginModel.Password = password;
        showCopyNotification = true;
        StateHasChanged();
        await Task.Delay(2000);
        showCopyNotification = false;
        StateHasChanged();
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email format")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        public string Password { get; set; } = string.Empty;
    }
}
