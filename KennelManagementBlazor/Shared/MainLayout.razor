<style>
    @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700;800&family=Quicksand:wght@500;600;700&display=swap');

    /* ============================================
       CSS Variables
       ============================================ */
    :root {
        --cream: #FDF8F3;
        --warm-white: #FFFBF7;
        --peach: #FFECD2;
        --peach-dark: #FFD9B3;
        --coral: #FF9A8B;
        --coral-dark: #E8857A;
        --amber: #FFB347;
        --charcoal: #2D3436;
        --gray-dark: #4A5568;
        --gray: #636E72;
        --gray-light: #A0AEC0;
        --gray-lighter: #E2E8F0;
        --gray-lightest: #F7FAFC;
        --shadow-sm: 0 2px 4px rgba(45, 52, 54, 0.06);
        --shadow: 0 4px 12px rgba(45, 52, 54, 0.08);
        --shadow-md: 0 8px 24px rgba(45, 52, 54, 0.12);
        --radius-sm: 8px;
        --radius: 12px;
        --radius-md: 16px;
        --radius-lg: 20px;
    }

    /* ============================================
       Layout Structure
       ============================================ */
    .app-layout {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background: linear-gradient(160deg, var(--cream) 0%, #FFF5EB 50%, var(--peach) 100%);
        font-family: 'Nunito', system-ui, sans-serif;
    }

    /* ============================================
       Header & Navbar
       ============================================ */
    .app-header {
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .main-nav {
        background: rgba(255, 251, 247, 0.95);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 1px 0 rgba(0,0,0,0.05), var(--shadow);
        border-bottom: 1px solid rgba(255, 154, 139, 0.1);
    }

    .nav-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 72px;
    }

    /* Brand */
    .nav-brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        font-family: 'Quicksand', sans-serif;
        font-weight: 700;
        font-size: 1.25rem;
        color: var(--charcoal);
        transition: all 0.2s ease;
    }

    .nav-brand:hover {
        color: var(--coral-dark);
    }

    .brand-icon {
        width: 32px;
        height: 32px;
        color: var(--coral);
        transition: transform 0.3s ease;
    }

    .nav-brand:hover .brand-icon {
        transform: scale(1.1) rotate(-5deg);
    }

    .brand-text {
        background: linear-gradient(135deg, var(--charcoal) 0%, var(--gray-dark) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Mobile Toggle */
    .nav-toggle {
        display: none;
        background: none;
        border: none;
        padding: 0.5rem;
        cursor: pointer;
        border-radius: var(--radius-sm);
        transition: background 0.2s ease;
    }

    .nav-toggle:hover {
        background: var(--peach);
    }

    .toggle-icon {
        display: flex;
        flex-direction: column;
        gap: 5px;
        width: 22px;
    }

    .toggle-icon span {
        display: block;
        height: 2px;
        background: var(--charcoal);
        border-radius: 2px;
        transition: all 0.3s ease;
        transform-origin: center;
    }

    .toggle-icon.open span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
    }

    .toggle-icon.open span:nth-child(2) {
        opacity: 0;
        transform: scaleX(0);
    }

    .toggle-icon.open span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -5px);
    }

    /* Nav Menu */
    .nav-menu {
        display: flex;
        align-items: center;
        gap: 2rem;
        flex: 1;
        justify-content: space-between;
        margin-left: 3rem;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 0.25rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .nav-links li {
        margin: 0;
    }

    /* Nav Links */
    .nav-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.875rem;
        border-radius: var(--radius-sm);
        color: var(--gray-dark);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9375rem;
        transition: all 0.2s ease;
        position: relative;
    }

    .nav-link:hover {
        color: var(--coral-dark);
        background: rgba(255, 154, 139, 0.1);
    }

    .nav-link.active {
        color: var(--coral-dark);
        background: rgba(255, 154, 139, 0.15);
    }

    .nav-link.active::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 20px;
        height: 3px;
        background: linear-gradient(135deg, var(--coral) 0%, var(--amber) 100%);
        border-radius: 3px 3px 0 0;
    }

    .nav-icon {
        width: 18px;
        height: 18px;
        stroke-width: 2;
        flex-shrink: 0;
        opacity: 0.7;
        transition: opacity 0.2s ease;
    }

    .nav-link:hover .nav-icon,
    .nav-link.active .nav-icon {
        opacity: 1;
    }

    /* User Area */
    .nav-user {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.375rem 0.875rem 0.375rem 0.375rem;
        background: white;
        border: 1px solid var(--gray-lighter);
        border-radius: 100px;
        transition: all 0.2s ease;
    }

    .user-info:hover {
        border-color: var(--peach-dark);
        box-shadow: var(--shadow-sm);
    }

    .user-avatar {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--coral) 0%, var(--amber) 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.875rem;
        box-shadow: 0 2px 8px rgba(255, 154, 139, 0.3);
    }

    .user-details {
        display: flex;
        flex-direction: column;
        line-height: 1.25;
    }

    .user-name {
        font-weight: 700;
        font-size: 0.8125rem;
        color: var(--charcoal);
    }

    .user-role {
        font-size: 0.6875rem;
        color: var(--gray);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

    .btn-logout {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: white;
        border: 1px solid var(--gray-lighter);
        border-radius: 100px;
        color: var(--gray-dark);
        font-weight: 600;
        font-size: 0.8125rem;
        cursor: pointer;
        transition: all 0.2s ease;
        font-family: 'Nunito', sans-serif;
    }

    .btn-logout:hover {
        background: linear-gradient(135deg, var(--coral) 0%, var(--amber) 100%);
        border-color: transparent;
        color: white;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(255, 154, 139, 0.3);
    }

    .btn-icon {
        width: 16px;
        height: 16px;
        transition: transform 0.2s ease;
    }

    .btn-logout:hover .btn-icon {
        transform: translateX(2px);
    }

    .btn-login {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1.25rem;
        background: linear-gradient(135deg, var(--coral) 0%, var(--amber) 100%);
        border: none;
        border-radius: 100px;
        color: white;
        font-weight: 700;
        font-size: 0.875rem;
        text-decoration: none;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(255, 154, 139, 0.3);
    }

    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 154, 139, 0.4);
        color: white;
    }

    .btn-login:hover .btn-icon {
        transform: translateX(3px);
    }

    /* ============================================
       Main Content
       ============================================ */
    .app-main {
        flex: 1;
        padding: 2rem;
    }

    .content-wrapper {
        max-width: 1400px;
        margin: 0 auto;
    }

    /* ============================================
       Footer
       ============================================ */
    .app-footer {
        background: rgba(255, 251, 247, 0.8);
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(255, 154, 139, 0.1);
        padding: 1.25rem 2rem;
    }

    .footer-content {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        font-size: 0.8125rem;
        color: var(--gray);
        font-weight: 600;
    }

    .footer-icon {
        width: 14px;
        height: 14px;
        color: var(--coral);
    }

    .footer-divider {
        color: var(--gray-light);
        margin: 0 0.25rem;
    }

    /* ============================================
       Responsive Design
       ============================================ */
    @@media (max-width: 1024px) {
        .nav-toggle {
            display: block;
        }

        .nav-menu {
            position: fixed;
            top: 72px;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 251, 247, 0.98);
            backdrop-filter: blur(20px);
            flex-direction: column;
            justify-content: flex-start;
            align-items: stretch;
            padding: 1.5rem;
            margin-left: 0;
            gap: 1.5rem;
            transform: translateX(100%);
            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            overflow-y: auto;
        }

        .nav-menu.show {
            transform: translateX(0);
        }

        .nav-links {
            flex-direction: column;
            align-items: stretch;
            gap: 0.375rem;
        }

        .nav-link {
            padding: 0.875rem 1rem;
            border-radius: var(--radius);
        }

        .nav-link.active::after {
            display: none;
        }

        .nav-link.active {
            background: linear-gradient(135deg, var(--coral) 0%, var(--amber) 100%);
            color: white;
        }

        .nav-link.active .nav-icon {
            opacity: 1;
        }

        .nav-user {
            flex-direction: column;
            align-items: stretch;
            gap: 0.875rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--gray-lighter);
            margin-top: auto;
        }

        .user-info {
            justify-content: flex-start;
            border-radius: var(--radius);
            padding: 0.75rem;
        }

        .btn-logout,
        .btn-login {
            justify-content: center;
            padding: 0.875rem 1.25rem;
            border-radius: var(--radius);
        }
    }

    @@media (max-width: 576px) {
        .nav-container {
            padding: 0 1rem;
            height: 64px;
        }

        .brand-text {
            font-size: 1.125rem;
        }

        .brand-icon {
            width: 28px;
            height: 28px;
        }

        .nav-menu {
            top: 64px;
            padding: 1rem;
        }

        .app-main {
            padding: 1.25rem 1rem;
        }

        .app-footer {
            padding: 1rem;
        }

        .footer-content {
            flex-direction: column;
            gap: 0.25rem;
        }

        .footer-divider {
            display: none;
        }
    }
</style>

